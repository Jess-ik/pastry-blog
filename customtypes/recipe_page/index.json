{
  "format": "page",
  "id": "recipe_page",
  "label": "Recipe Page",
  "repeatable": true,
  "status": true,
  "json": {
    "Main": {
      "uid": {
        "config": {
          "label": "UID"
        },
        "type": "UID"
      },
      "recipe_name": {
        "type": "Text",
        "config": {
          "label": "Recipe Name",
          "placeholder": ""
        }
      },
      "recipe_desc": {
        "type": "Text",
        "config": {
          "label": "Recipe Desc",
          "placeholder": ""
        }
      },
      "recipe_hero_img": {
        "type": "Image",
        "config": {
          "label": "Recipe Hero Img",
          "constraint": {},
          "thumbnails": []
        }
      },
      "tag": {
        "type": "Select",
        "config": {
          "label": "Tag",
          "placeholder": "",
          "options": [
            "Viennoiseries",
            "Biscuits",
            "Gâteaux",
            "Tartes",
            "Crêmes"
          ]
        }
      },
      "author": {
        "type": "Link",
        "config": {
          "label": "Author",
          "select": "document",
          "customtypes": ["author"]
        }
      },
      "slices": {
        "type": "Slices",
        "fieldset": "Slice Zone",
        "config": {
          "choices": {
            "recipe_info": {
              "type": "SharedSlice"
            }
          }
        }
      }
    },
    "SEO & Metadata": {
      "meta_description": {
        "config": {
          "label": "Meta Description",
          "placeholder": "A brief summary of the page"
        },
        "type": "Text"
      },
      "meta_image": {
        "config": {
          "constraint": {
            "height": 1260,
            "width": 2400
          },
          "label": "Meta Image",
          "thumbnails": []
        },
        "type": "Image"
      },
      "meta_title": {
        "config": {
          "label": "Meta Title",
          "placeholder": "A title of the page used for social media and search engines"
        },
        "type": "Text"
      }
    }
  }
}
